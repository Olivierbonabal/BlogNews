{% extends 'layout/base.html.twig' %}

{% block title %}S'Enregistrer
{% endblock %}

{% block navbar %}{% endblock %}

{% block body %}

<div class="login-form">

	{% for flash_error in app.flashes('verify_email_error') %}
		<div class="alert alert-danger" role="alert">{{ flash_error }}</div>
	{% endfor %}

	<h1>S'Enregistrer</h1>

	{{ form_start(registrationForm) }}
	{{ form_row(registrationForm.email, {'attr': {'class': 'form form-control'}}) }}
	{{ form_row(registrationForm.firstName, {'attr': {'class': 'form form-control'}}) }}
	{{ form_row(registrationForm.lastName, {'attr': {'class': 'form form-control'}}) }}
	{{ form_row(registrationForm.plainPassword, {
            label: 'Password', 'attr': {'class': 'form form-control'}
        }) }}
	{{ form_row(registrationForm.agreeTerms) }}

	<div class="d-grid gap-2">
		<button type="submit" class="btn btn-primary">Register</button>
	</div>

	{{ form_end(registrationForm) }}

    </div>

{% endblock %}

{% block footer %}{% endblock %}
